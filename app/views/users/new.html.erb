<div class="row">
  <div class="col-xs-12">
    <h1>Cadastre-se</h1>
  </div>

  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_for @user, data: {turbo:false} do |f| %>
      <%= render 'fields', f: f %>   

      <div class="form-group">
        <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
        <%= link_to 'Voltar',root_url, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
